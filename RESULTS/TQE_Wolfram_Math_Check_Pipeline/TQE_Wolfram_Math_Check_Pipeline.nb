(* Save CSV as-is *)
Export[FileNameJoin[{outDir, "math_check_results.csv"}], results];

(* Prepare JSON-safe structure *)
jsonResults = Normal @ Map[
   Function[fileAssoc,
     Association[
       "File" -> fileAssoc["File"],
       "TotalRows" -> fileAssoc["TotalRows"],
       "AnyNaN" -> fileAssoc["AnyNaN"],
       "AnyInfinity" -> fileAssoc["AnyInfinity"],
       "Columns" -> Normal[fileAssoc["Columns"] /. (Null | None) -> Null]
     ]
   ],
   results
];

(* Save clean JSON *)
Export[FileNameJoin[{outDir, "math_check_results.json"}], jsonResults, "JSON"];

